<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUser">

    <Button
        android:id="@+id/btn_v_newUser_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="32dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="@+id/btn_v_newUser_register"
        app:layout_constraintEnd_toStartOf="@+id/btn_v_newUser_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_v_newUser_register" />

    <TextView
        android:id="@+id/tv_v_newUser_emailError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Already In Use"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/et_v_newUser_email"
        app:layout_constraintStart_toStartOf="@+id/et_v_newUser_email" />

    <EditText
        android:id="@+id/et_v_newUser_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_v_newUser_pword"
        app:layout_constraintStart_toStartOf="@+id/et_v_newUser_pword"
        app:layout_constraintTop_toBottomOf="@+id/et_v_newUser_pword" />

    <EditText
        android:id="@+id/et_v_newUser_pword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="241dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:text="Email:"
        app:layout_constraintEnd_toStartOf="@+id/et_v_newUser_email"
        app:layout_constraintTop_toTopOf="@+id/et_v_newUser_email" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="22dp"
        android:text="Password:"
        app:layout_constraintEnd_toStartOf="@+id/et_v_newUser_pword"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_v_newUser_pword" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Register New Account"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="59dp"
        android:text="Username:"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/et_v_newUser_uname"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_v_newUser_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/tv_v_newUser_unameError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username Already Taken"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/et_v_newUser_uname"
        app:layout_constraintStart_toStartOf="@+id/et_v_newUser_uname" />

    <Button
        android:id="@+id/btn_v_newUser_register"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="117dp"
        android:text="Register New Account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_v_newUser_back" />

    <TextView
        android:id="@+id/tv_v_newUser_emptyError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:text="Please fill out all fields"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_newUser_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>