<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_v_reviewcell_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arya"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_v_reviewcell_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_reviewcell_text" />

    <TextView
        android:id="@+id/tv_v_reviewcell_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/arya"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_v_reviewcell_creator"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_reviewcell_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arya"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_v_reviewcell_movie"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_reviewcell_movie" />

    <TextView
        android:id="@+id/tv_v_reviewcell_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arya"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_v_reviewcell_creator"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_reviewcell_creator" />

    <TextView
        android:id="@+id/tv_v_reviewcell_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:fontFamily="@font/arya"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_reviewcell_score"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>